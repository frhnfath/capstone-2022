<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dicoding.githubuserfix">
    
    <uses-permission android:name="android.permission.INTERNET" />
    <permission android:name="com.dicoding.githubuserfix.READ_DATABSE"
        android:protectionLevel="normal" />
    <permission android:name="com.dicoding.githubuserfix.WRITE_DATABASE"
        android:protectionLevel="normal" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GithubUserFix">
        <activity android:name=".layout.FavoriteActivity"></activity>
        <activity android:name=".layout.NotificationActivity" />
        <activity android:name=".layout.DetailActivity" />
        <activity android:name=".layout.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <provider
            android:authorities="com.dicoding.githubuserfix"
            android:name=".provider.FavoriteProvider"
            android:enabled="true"
            android:exported="true"
            android:readPermission="com.dicoding.githubuserfix.READ_DATABASE"
            android:writePermission="com.dicoding.githubuserfix.WRITE_DATABASE" />

        <receiver android:name=".notifications.NotificationBroadcast"
            android:enabled="true"
            android:permission="TODO" />
    </application>

</manifest>